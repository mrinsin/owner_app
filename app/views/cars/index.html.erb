<p id="notice"><%= notice %></p>

<h1>Listing Cars</h1>

<table>
  <thead>
    <tr>
      <th>Make</th>
      <th>Year</th>
      <th>Color</th>
      <th>Owner</th>
      <th>Garage</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cars.each do |car| %>
      <tr>
        <td><%= car.make %></td>
        <td><%= car.year %></td>
        <td><%= car.color %></td>
        <td>
          <a href="/owners/<%= car.owner.id%>">
            <%= car.owner.full_name %>
          </a>
        </td>
        <td>
          <a href="/garages/<%= car.garage.id%>">
            <%= car.garage.house.address %>
          </a>
        </td>
        <td><%= link_to 'Edit', edit_car_path(car) %></td>
        <td><%= link_to 'Destroy', car, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

